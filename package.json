{
  "name": "peerplaysjs-ws",
  "version": "0.1.11",
  "description": "Pure JavaScript Peerplays/Graphene websocket interface for node.js and browsers.",
  "browser": {
    "ws": false
  },
  "scripts": {
    "test": "mocha --recursive",
    "test:watch": "npm test -- --watch",
    "clean": "rm -rf ./dist/* & rm -rf ./build/*",
    "prebuild": "npm run clean",
    "build": "babel lib --presets babel-preset-es2015 --out-dir dist",
    "postbuild": "npm run browserify",
    "prepublish": "npm run build",
    "browserify": "browserify dist/src/ApiInstances.js --standalone peerplaysWS -o build/peerplaysjs-ws.js -d",
    "postbrowserify": "uglifyjs --compress --mangle --sequences --drop_console --mangle-props --screw-ie8 --output build/peerplaysjs-ws.min.js -- build/peerplaysjs-ws.js",
    "bundle": "npm run browserify && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PBSA/peerplaysjs-ws.git"
  },
  "author": "Sigve Kvalsvik <bitsharesblocks@gmail.com> (https://github.com/svk31)",
  "contributors": [
    "James Calfee <james@jcalfee.info> (https://github.com/jcalfee/)"
  ],
  "license": "BSD-2-Clause-FreeBSD",
  "bugs": {
    "url": "https://github.com/PBSA/peerplaysjs-ws/issues"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "main": "./dist/index.js",
  "dependencies": {
    "ReconnectingWebSocket": "git+https://github.com/svk31/reconnecting-websocket.git",
    "ws": "^1.1.4"
  },
  "devDependencies": {
    "assert": "^1.3.0",
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "browserify": "^13.0.1",
    "mocha": "^2.3.4",
    "uglifyjs": "^2.4.10"
  },
  "homepage": "https://github.com/PBSA/peerplaysjs-ws#readme",
  "directories": {
    "example": "examples",
    "lib": "lib",
    "test": "test"
  },
  "keywords": [
    "peerplays"
  ]
}
